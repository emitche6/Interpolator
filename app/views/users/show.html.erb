<a href="http://localhost:3000/interpolations"><%= image_tag("logo_int.gif", :alt => "Interpolator") %></a><p id="notice"><%= notice %></p>
<h1 class="centerer">User Information</h1>
<div id="login2">
<div id="user_page">
<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<b>Created:</b>
<% @user.interpolations.each do |i| %>
<p><%= link_to i.name, i %></p>
<% end %>

<b>Downloads:</b>
<% @user.downloads.each do |d| %>
<p>
  <%= link_to d.interpolation.name, d.interpolation %>
</p>
<% end %>
</div>
</div>
<p id="backlink">
<% if current_user == @user %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back', users_path %>
</p>